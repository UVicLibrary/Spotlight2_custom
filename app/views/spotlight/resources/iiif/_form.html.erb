<%= bootstrap_form_for([spotlight, current_exhibit, @resource.becomes(Spotlight::Resources::IiifHarvester)], as: :resource, layout: :horizontal, label_col: 'col-md-2', control_col: 'col-sm-6 col-md-6' ) do |f| %>

  <!-- Help icon/expand modal -->
  <a href="" data-toggle="modal" data-target="#myModal" class="vault-url-icon" >
    <span class="glyphicon glyphicon-question-sign" aria-hidden="true" title="How do I find the URL?">
    </span>
  </a>

  <%= f.text_field :url, help: "Add the URL of a Vault IIIF manifest for a single-image work or compound object.", label: "Manifest URL" %>
  <div class="form-actions">
    <div class="primary-actions">
      <%= cancel_link @resource, :back, class: 'btn btn-default' %>
      <%= f.submit t('.add_item'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">How do I find the URL?</h4>
      </div>
      <div class="modal-body">
        <ol>
          <li>Go to the page for any work and scroll down until you see the permalink.</li>
            <%= image_tag("permalink.png", class: "img-thumbnail", style: "max-width: 100%; margin-bottom: 1em; margin-top: 0.5em") %>
          <li>Copy/paste the permalink into the URL box and add "/manifest.json" to the end.</li>
            <div class="alert alert-info" style="margin-top: 0.5em" >https://vault.library.uvic.ca/concern/generic_works/d7738877-708b-497a-8a1d-21629b06c707/manifest.json</div>
          <li>Click the "Add IIIF items" button.</li>
        </ol>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->